<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="test.ivacompany.com.test_project">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/MyMaterialTheme">
        <service
            android:name=".roboCLass.SampleSpiceService"
            android:enabled="true"
            android:exported="true" />

        <activity android:name=".ui.All_Actual_Articles" />
        <activity android:name=".ui.Article_Activity" />
        <activity android:name=".ui.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ui.All_Economic_Articles" />
        <activity android:name=".ui.All_Sport_Articles" />
        <activity android:name=".ui.All_Culture_Articles" />
        <activity android:name=".ui.Favorite_Articles" />
        <activity
            android:name=".ui.Tabbed"
            android:label="@string/title_activity_tabbed"
            android:theme="@style/MyMaterialTheme"></activity>
    </application>

</manifest>